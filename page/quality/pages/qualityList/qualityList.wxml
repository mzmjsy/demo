<form class="page" >
  <view class="picker_group">
    <picker mode="date" value="{{date}}" end="{{date2}}" bindchange="bindDateChange">  
      <view class="picker">  
        {{date}}
      </view>  
    </picker>
    至  
    <picker mode="date" value="{{date2}}" start="{{date}}" bindchange="bindDateChange2">  
      <view class="picker">  
        {{date2}}
      </view>  
    </picker>
    <button type="default" class="search" size="mini" form-type="submit" bindtap="bindSearchData">  
      查询
    </button>
  </view>
</form>
<scroll-view class='container' scroll-top="{{scrollTop}}" scroll-y style="height: {{scrollHeight}}px" scroll-with-animation bindscroll="scroll">
  <block wx:for-items="{{qualityInfos}}" wx:for-item="quality">
    <view class='card b-shadow' id="{{quality.qualityInfoId}}" bindtap="getQualityInfo">
      <view class='nearCard-fr'>
        <view class="row-first color">工步：
          <text class='c-green'>{{quality.gongBu}}</text>
        </view>
        <view class="color">产品类别：
          <text class='c-green'>{{quality.productClass}}</text>
        </view>
        <view class="color">资料名称：
          <text class='c-green'>{{quality.infoName}}</text>
        </view>
        <view>备注：
          <textarea name="remark" value="{{quality.remark}}" maxlength='2000' />
        </view>
      </view>
      <view class='nearCard-fr'>
        资料图片：
      </view>
      <view class='block'>
        <block wx:for="{{quality.srcUrl}}">
          <view>
            <image class='addpic' src='{{item}}' data-index="{{index}}" data-url="{{quality.srcUrl}}" bindtap="previewImage"></image>
          </view>
        </block>
      </view>
    </view>
  </block>
</scroll-view>
<image src="../../../../img/top.png" style="width: 40px; height: 40px; position: fixed; right: 40px; bottom: 40px;" bindtap="goTop" wx:if="{{visual}}" class="{{animation}}" />